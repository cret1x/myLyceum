<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/navBarColor</item>
        <item name="android:statusBarColor">#1e1e1e</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.FloatButton</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#1e1e1e</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="radius">25dp</item>
        <item name="android:radius">25dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FloatButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>
</resources>